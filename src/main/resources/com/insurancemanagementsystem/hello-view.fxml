<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.yourapplication.LoginController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <!-- Title Label -->
    <Label text="Login" style="-fx-font-size: 24px; -fx-font-family: 'Arial';"/>

    <!-- Username Input -->
    <TextField fx:id="usernameField" promptText="Username"/>

    <!-- Password Input -->
    <PasswordField fx:id="passwordField" promptText="Password"/>

    <!-- Login Button -->
    <Button text="Login" onAction="#handleLoginButtonAction"/>

    <!-- Status Message Label -->
    <Label fx:id="loginMessageLabel"/>
</VBox>
