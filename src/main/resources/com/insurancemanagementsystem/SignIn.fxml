<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.insurancemanagementsystem.controller.PolicyHolderController" style="-fx-background-color: linear-gradient(to bottom right, #7F00FF, #E100FF);">

    <!-- Top Menu Bar -->
    <top>
        <VBox>
            <HBox spacing="20" alignment="CENTER" style="-fx-background-color: linear-gradient(to right, #00C9FF, #92FE9D);" padding="10">
                <Label text="Horizon One" style="-fx-font-size: 18px; -fx-text-fill: white;" />
                <Button text="Claims Dashboard" onAction="#showClaimsDashboard" style="-fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-background-radius: 10; -fx-text-fill: white;" />
                <Button text="Edit Claims" onAction="#showEditClaims" style="-fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-background-radius: 10; -fx-text-fill: white;" />
                <Button text="Personal Information" onAction="#showPersonalInfo" style="-fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-background-radius: 10; -fx-text-fill: white;" />
                <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
                <Label text="Jonathan M" style="-fx-font-size: 16px; -fx-text-fill: white;" />
            </HBox>
            <Label text="Select an option from the top menu to view details." style="-fx-font-size: 18px; -fx-text-fill: white;" fx:id="placeholderLabel" />
        </VBox>
    </top>

    <!-- Center Content Area -->
    <center>
        <VBox spacing="10">
            <!-- Claims Dashboard Content -->
            <VBox fx:id="claimsDashboard" visible="false">
                <Label text="Claims Dashboard" style="-fx-font-size: 24px; -fx-text-fill: white;" />
                <!-- Add your claims dashboard UI components here -->
            </VBox>

            <!-- Edit Claims Content -->
            <VBox fx:id="editClaims" visible="false">
                <Label text="Edit Claims" style="-fx-font-size: 24px; -fx-text-fill: white;" />
                <!-- Add your edit claims UI components here -->
            </VBox>

            <!-- Personal Information Content -->
            <VBox fx:id="personalInfo" visible="false">
                <Label text="Personal Information" style="-fx-font-size: 24px; -fx-text-fill: white;" />
                <!-- Add your personal information UI components here -->
            </VBox>

            <!-- TableView for displaying data -->
            <TableView fx:id="dataTableView" visible="true">
                <columns>
                    <TableColumn text="Column 1" />
                    <TableColumn text="Column 2" />
                    <TableColumn text="Column 3" />
                    <TableColumn text="Column 4" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
