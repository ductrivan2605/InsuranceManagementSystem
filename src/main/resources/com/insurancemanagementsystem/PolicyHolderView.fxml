<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: linear-gradient(to bottom right, #7F00FF, #E100FF);" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.insurancemanagementsystem.controller.PolicyHolderController">

    <!-- Top Menu Bar -->
    <top>
        <VBox>
            <HBox alignment="CENTER" spacing="20" style="-fx-background-color: linear-gradient(to right, #00C9FF, #92FE9D);">
                <Label style="-fx-font-size: 18px; -fx-text-fill: white;" text="Horizon One" />
                <Button onAction="#showClaimsDashboard" style="-fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-background-radius: 10; -fx-text-fill: white;" text="Claims Dashboard" />
                <Button onAction="#showEditClaims" style="-fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-background-radius: 10; -fx-text-fill: white;" text="Edit Claims" />
                <Button onAction="#showPersonalInfo" style="-fx-font-size: 16px; -fx-font-family: 'Arial'; -fx-background-radius: 10; -fx-text-fill: white;" text="Personal Information" />
                <Region fx:id="spacer" HBox.hgrow="ALWAYS" />
                <Label style="-fx-font-size: 16px; -fx-text-fill: white;" text="Jonathan M" />
            </HBox>
            <Label fx:id="placeholderLabel" style="-fx-font-size: 18px; -fx-text-fill: white;" text="Select an option from the top menu to view details." />
        </VBox>
    </top>

    <!-- Center Content Area -->
    <center>
        <VBox spacing="10">

            <!-- TableView for displaying data -->
            <TableView fx:id="dataTableView" visible="true">
                <columns>
                    <TableColumn text="Column 1" />
                    <TableColumn text="Column 2" />
                    <TableColumn text="Column 3" />
                    <TableColumn text="Column 4" />
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
