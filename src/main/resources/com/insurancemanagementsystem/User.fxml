<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.insurancemanagementsystem.controller.UserController">

    <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="3">
        <Label text="Admin Dashboard" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #4CAF50;"/>
    </VBox>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="3">
        <Label text="Filter by:"/>
        <ComboBox fx:id="filterComboBox" promptText="Select filter"/>
    </HBox>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="3">
        <Label text="Search:"/>
        <TextField fx:id="searchTextField"/>
        <Button text="Apply" fx:id="applyFilterButton"/>
    </HBox>

    <TableView fx:id="adminTableView" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="3">
        <columns>
            <TableColumn text="ID" fx:id="userId"/>
            <TableColumn text="User name" fx:id="username"/>
            <TableColumn text="Password" fx:id="password"/>
            <TableColumn text="Full Name" fx:id="fullName"/>
            <TableColumn text="Role" fx:id="role"/>
            <TableColumn text="Email" fx:id="userEmail"/>
        </columns>
    </TableView>

    <HBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="3">
        <Button text="Add User" fx:id="addUserButton" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button text="Update User" fx:id="updateUserButton" style="-fx-background-color: #FFC107; -fx-text-fill: white;"/>
        <Button text="Delete User" fx:id="deleteUserButton" style="-fx-background-color: #F44336; -fx-text-fill: white;"/>
    </HBox>
</GridPane>
